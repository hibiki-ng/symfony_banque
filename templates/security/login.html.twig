{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<style>
    #sidebar {
        visibility: hidden;
    }
    #navbar {
        visibility: hidden;
    }
    #main {
        position: absolute;
        top: 0px; left: 0px;
    }
</style>

<div id="main" class="flex w-screen">
    <div class="flex flex-col items-center justify-center h-screen w-screen">
        <div class="flex flex-row h-3/6 w-3/6 rounded-2xl bg-gradient-to-r from-gray-100 to-gray-200 drop-shadow-2xl">
            <div class="flex flex-row items-center justify-center h-full w-2/5">
                <img src="/img/computer.png" class="object-contain w-full h-full" alt="">
            </div>
            <form action="{{ path('security_login') }}" method="post" class="flex flex-col items-center justify-center h-full w-3/5">
                <div class="flex flex-col items-center justify-center h-full w-3/5">
                    <div class="flex flex-col items-center w-full mb-8 text-4xl font-bold">
                        <h3>Se connecter</h3>
                    </div>
                    <div class="flex flex-row items-center justify-center w-full">
                        <i class="fas fa-user text-indigo-600"></i>
                        <input type="text" class="rounded-2xl py-1 px-2 ml-3 border-0 font-semibold text-indigo-400" placeholder="Utilisateur" required name="_username">
                    </div>
                    <div class="flex flex-row items-center justify-center w-full mt-5">
                        <i class="fas fa-lock text-indigo-600"></i>
                        <input type="password" class="rounded-2xl py-1 px-2 ml-3 border-0 font-semibold text-indigo-400" placeholder="Mot de passe" required name="_password">
                    </div>
                    <div class="mt-8">
                        <input class="px-6 py-2 w-48 text-lg rounded-full bg-indigo-400 hover:bg-indigo-500 transition ease-in-out cursor-pointer text-white font-bold" type="submit" value="Se connecter">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


{% endblock %}